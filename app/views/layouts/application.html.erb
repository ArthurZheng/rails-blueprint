<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% page_title = @page_title ? "#{@page_title} - #{Metatags[:title]}" : "#{Metatags[:title]} - #{Metatags[:description]}" %>
    <title><%= page_title %></title>

    <link rel="shortcut icon" type="image/png" href="/favicon.png"/>
    <link rel="apple-touch-icon" href="/favicon.png"/>

    <!-- Viewport meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="<%= Metatags[:title] %>">

    <!-- OpenGraph Meta -->
    <meta property="og:site_name" content="<%= Metatags[:title] %>"/>
    <meta property="og:type" content="website"/>
    <meta property="og:description" content="<%= Metatags[:description] %>"/>
    <meta property="og:url" content="<%= Metatags[:website] %>"/>
    <meta property="og:title" content="<%= page_title %>"/>
    <meta property="og:image" content="<%= Metatags[:default_image] %>"/>

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="<%= Metatags[:twitter_handle] %>" />
    <meta name="twitter:title" content="<%= page_title %>" />
    <meta name="twitter:description" content="<%= Metatags[:description] %>" />
    <meta name="twitter:image" content="<%= Metatags[:default_image] %>" />

    <meta name="google-site-verification" content="<%= Metatags[:google_webmaster] %>" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%= yield %>

    <%= render 'layouts/scripts/flash' %>
    <%= render 'layouts/scripts/ga' %>
  </body>
</html>
