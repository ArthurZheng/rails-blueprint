<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <title><%= generate_page_title @page_title %></title>

    <%= render "layouts/metatags", title: @page_title %>
    
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/scripts/ga' %>

  </head>

  <body class="bg-gray-200">

    <div class="min-h-screen flex justify-center items-center">
      <div class="w-full lg:w-1/3 p-8 lg:p-16 rounded-lg bg-white shadow-lg">
        <div class="flex justify-center lg:-mt-24 mb-2">
          <%= link_to root_path do %>
            <%= image_tag 'https://bulma.io/images/placeholders/96x96.png', class: 'rounded-full h-16 w-16' %>
          <% end %>
        </div>

        <%= yield %>

        <%= render "users/shared/links" %>
      </div>
    </div>

    <%= render 'layouts/scripts/flash' %>
    <%= yield :extra_scripts %>
  </body>
</html>